{% extends 'base.html.twig' %}

{% block title %}Hello AnimalController!{% endblock %}

{% block body %}
    <h1>Gestion des animaux</h1>

    <table class="table table-striped">
        <tr>
            <th>Numero d'identification</th>
            <th>Nom</th>
            <th>Appartient</th>
            <th>Genre</th>
            <th>Espece</th>
            <th>Stérilisé</th>
            <th>Quarantaine</th>
            <th>Actions</th>
        </tr>
        {% for animal in animaux %}
        <tr>
            <td>{{ animal.NumeroIdentification }}</td>
            <td>{{ animal.nom }}</td>
            <td>{{ animal.proprietaire}}</td>
            <td>{{ animal.genre}}</td>
            <td>{{ animal.sterilise}}</td>
            <td>{{ animal.quarantaine}}</td>
            <td>
                <a href="{{ path("app_animal_modifier", {"id": animal.id}) }}" class="btn btn-primary">Modifier</a>
                <a href="{{ path("app_animal_supprimer", {"id": animal.id}) }}" class="btn btn-danger">Supprimer</a>
            </td>
        </tr>
        {% endfor %}
    </table>
    <a href="{{ path("app_animal_ajouter") }}" class="btn btn-success">Ajouter un animal</a>

{% endblock %}
