{% extends 'base.html.twig' %}

{% block title %}Hello AnimalController!{% endblock %}

{% block body %}
    <h1>Gestion des animaux</h1>

    <table class="table table-striped">
            <tr>
                <th>Numero d'identification</th>
                <th>Nom</th>
                <th>Appartient</th>
                <th>Genre</th>
                <th>Espece</th>
                <th>Stérilisé</th>
                <th>Quarantaine</th>
            </tr>
           {% for enclo in enclos %}
            <tr>
                <td>{{ enclo.nom }}</td>
                <td>{{ enclo.superficie }}</td>
                <td>{{ enclo.NbMaximalAnimaux}}</td>
                <td>{{ enclo.quarantaine}}</td>
                <td>
                    <a href="{{ path("app_enclos_modifier", {"id": enclo.id}) }}" class="btn btn-primary">Modifier</a>
                    <a href="{{ path("app_enclos_supprimer", {"id": enclo.id}) }}" class="btn btn-danger">Supprimer</a>
                    <a href="{{ path("app_animal", {"idEnclo": enclo.id} )}}" class="btn btn-warning">Enclos</a>
                </td>
            </tr>
            {% endfor %}
        </table>
{% endblock %}
